{
  "compilerOptions": {
      "lib": ["ES2022"],
      "outDir": "./dist",

      "module": "Node16",
      "moduleResolution": "Node16",
      "resolveJsonModule": true,

      "declaration": false,
      "declarationMap": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "newLine": "crlf",
      "removeComments": true,
      "inlineSourceMap": false,
      "useDefineForClassFields": false,
      "importHelpers": false,

      "skipLibCheck": true,
      "alwaysStrict": true,
      "verbatimModuleSyntax": false,
      "preserveConstEnums": true,

      "types": [],
      "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist/**/*", "node_modules/**/*", "./node_modules/lavaclient/dist/player.ts"]
}